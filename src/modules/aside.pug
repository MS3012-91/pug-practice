mixin link (source, name, isArrow)
    li(key=name)
        a 
            .navigate-element
                .main-elements
                    img(src= source, alt="navigate icon" class="navigate-icons" class="navigate-icons")
                    p= name
                if isArrow
                    img(src="src/images/chevron-right-2.svg", alt="arrow" class="navigate-arrow")

.aside 
    header
        .logo
            a.logo-link(href="#") 
            img(src="src/images/logo.svg", alt="logo") 
            .logo-text
                p Dashboard 
                    span v.01
    main
        nav 
            ul.nav 
                +link ("src/images/db-icon.svg", "Dashboard", false)
                +link ("src/images/d-square-1.svg", "Product", true)
                +link ("src/images/user-square-1.svg", "Customers", true)
                +link ("src/images/wallet-money-2.svg", "Income", true)
                +link ("src/images/discount-shape-1.svg", "Promote", true)
                +link ("src/images/message-question-1.svg", "Help", true)
    footer 
        .user-block
            img(src="src/images/userPhoto.jpg", alt="user photo")
            .userInfo 
                p= userName 
                p Project Manager





